<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.ActividadPresentacion"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cvAnimacionInicio"
        android:text="Collection App"
        android:textSize="48sp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAnimacionInicio"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvCargando"
        app:cardCornerRadius="16dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavAnimacionInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="animacion_lottie.json"
            app:lottie_imageAssetsFolder="raw"
            app:lottie_loop="true"
            app:lottie_autoPlay="true">
        </com.airbnb.lottie.LottieAnimationView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCargando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvAnimacionInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cargando..."
        android:textSize="24sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>